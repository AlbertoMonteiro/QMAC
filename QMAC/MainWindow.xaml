<Window x:Class="QMAC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:VM="clr-namespace:QMAC.ViewModels"
        Title="QMAC" Height="350" Width="525"
        >
    <Window.DataContext>
        <VM:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <TextBlock x:Name="tbk_Address" HorizontalAlignment="Left" Margin="25,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Text="{Binding Address}"/>
        <ComboBox x:Name="schoolComboBox" HorizontalAlignment="Left" Margin="25,80,0,0" VerticalAlignment="Top" Width="250" FontSize="16" ItemsSource="{Binding LocationList}" SelectedItem="{Binding LocationPicked}" />
        <GroupBox Header="Type of Computer" HorizontalAlignment="Left" Margin="305,36,0,0" VerticalAlignment="Top" Height="100" Width="166" FontSize="16">
            <StackPanel>
                <CheckBox x:Name="desktopCheckBox" Content="Desktop" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Margin="15,15,0,0" IsChecked="{Binding DesktopPicked}"/>
                <CheckBox x:Name="laptopCheckBox" Content="Laptop" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Margin="15,10,0,0" RenderTransformOrigin="0.538,-0.092" IsChecked="{Binding LaptopPicked}"/>
            </StackPanel>
        </GroupBox>
        <Button x:Name="exportBtn" Content="Export" HorizontalAlignment="Left" Margin="396,266,0,0" VerticalAlignment="Top" Width="75" FontSize="16"/>
    </Grid>
</Window>
