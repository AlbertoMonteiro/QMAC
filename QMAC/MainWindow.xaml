<Window x:Class="QMAC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:VM="clr-namespace:QMAC.ViewModels"
        Title="QMAC" Height="270.405" Width="425.779"
        >
    <Window.DataContext>
        <VM:MainViewModel/>
    </Window.DataContext>
    <Grid Background="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}">
        <TextBlock x:Name="tbk_Address" HorizontalAlignment="Left" Margin="25,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Text="{Binding Address}"/>
        <ComboBox x:Name="schoolComboBox" HorizontalAlignment="Left" Margin="25,79,0,0" VerticalAlignment="Top" Width="250" FontSize="16" ItemsSource="{Binding LocationList}" SelectedItem="{Binding LocationPicked}" />
        <Button x:Name="exportBtn" Content="Export" HorizontalAlignment="Left" Margin="319,178,0,0" Width="75" FontSize="16" Height="25" VerticalAlignment="Top"/>
    </Grid>
</Window>
